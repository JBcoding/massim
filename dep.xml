<assembly>
  <id>bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <!-- TODO adapt to new directories etc. -->
    <!-- RULES -->
     <fileSet>
      <directory>massim/</directory>
      <includes>
        <include>CONTEST*</include>
      </includes>
    </fileSet>

      <!-- CHANGELOG -->
      <fileSet>
          <directory>documents/</directory>
          <includes>
              <include>CHANGELOG</include>
          </includes>
      </fileSet>

    <!-- Documentation -->
     <fileSet>
      <directory>documents/2016</directory>
      <outputDirectory>documents</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>

     <fileSet>
      <directory>documents/2016</directory>
      <outputDirectory>documents</outputDirectory>
      <includes>
        <include>*.pdf</include>
      </includes>
    </fileSet>

    <!-- MASSim-server -->
    <fileSet>
      <directory>massim/target</directory>
      <outputDirectory>massim/target</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>massim/target/dependency</directory>
      <outputDirectory>massim/target/dependency</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>massim/scripts</directory>
      <outputDirectory>massim/scripts</outputDirectory>
      <includes>
          <include>startServer.sh</include>
          <include>startMapMonitor.sh</include>
	        <include>startMapFileViewer.sh</include>
	        <include>header.sh</include>
	        <include>server-header.sh</include>
          <include>statistics.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>massim/scripts/conf</directory>
      <outputDirectory>massim/scripts/conf</outputDirectory>
      <includes>
	      <include>2016-r-*.xml</include>
	      <include>helpers/2015/*</include>
      </includes>
      <excludes>
	      <exclude>helpers/2015/accounts-P*</exclude>
        <exclude>helpers/2015/accounts-t-*</exclude>
        <exclude>helpers/2015/config-ac1.dtd</exclude>
        <exclude>helpers/2015/config-contest.dtd</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>massim/scripts/conf/visualization</directory>
      <outputDirectory>massim/scripts/conf/visualization</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>massim/scripts/osm</directory>
      <outputDirectory>massim/scripts/osm</outputDirectory>
      <includes>
	      <include>london.osm.pbf</include>
	      <include>hannover.osm.pbf</include>
        <include>sanfrancisco.osm.pbf</include>
          <include>clausthal.osm.pbf</include>
      </includes>
    </fileSet>

    <!-- Java-agents -->
    <fileSet>
      <directory>javaagents/target</directory>
      <outputDirectory>javaagents/target</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>javaagents/target/dependency</directory>
      <outputDirectory>javaagents/target/dependency</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>javaagents/scripts</directory>
      <outputDirectory>javaagents/scripts</outputDirectory>
      <includes>
        <include>startAgents.sh</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>
    <fileSet>
      <directory>javaagents/scripts/conf</directory>
      <outputDirectory>javaagents/scripts/conf</outputDirectory>
      <excludes>
	      <exclude>**/graphs/**</exclude>
	      <exclude>**/osm/**</exclude>
      </excludes>
    </fileSet>

    <!-- EISMASSim -->
    <fileSet>
      <directory>eismassim/target</directory>
      <outputDirectory>eismassim/target</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>eismassim/target/dependency</directory>
      <outputDirectory>eismassim/target/dependency</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>javaagents/scripts/conf/dummyteam</directory>
      <outputDirectory>eismassim</outputDirectory>
      <includes>
        <include>eismassimconfig.xml</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>

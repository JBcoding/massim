<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <!-- Documents -->
        <fileSet>
            <directory>documents</directory>
            <outputDirectory>documents</outputDirectory>
            <includes>
                <include>*.md</include>
            </includes>
        </fileSet>

        <!-- MASSim-server -->
        <fileSet>
            <directory>server/target</directory>
            <outputDirectory>server/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/target/dependency</directory>
            <outputDirectory>server/target/dependency</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/conf</directory>
            <outputDirectory>server/conf</outputDirectory>
            <includes>
                <include>*.json</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>server/osm</directory>
            <outputDirectory>server/osm</outputDirectory>
            <includes>
                <include>*.osm.pbf</include>
            </includes>
        </fileSet>

        <!-- Java-agents -->
        <fileSet>
            <directory>javaagents/target</directory>
            <outputDirectory>javaagents/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>javaagents/target/dependency</directory>
            <outputDirectory>javaagents/target/dependency</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!-- EISMASSim -->
        <fileSet>
            <directory>eismassim/target</directory>
            <outputDirectory>eismassim/target</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>eismassim/target/dependency</directory>
            <outputDirectory>eismassim/target/dependency</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>